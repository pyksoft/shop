<ul class="flex-container">
  <% @products.each do |product| %>
  <li class="flex-item">
    <div class="flexphoto"><% product.photos.each do |photo| %>
    <%= image_tag photo.image %> </div>
    <div class=flexinfo>
      <h1 class="flextitle"><%= link_to product.name, product_path(product.id) %></h1>
      <br>
      <p class="flexprice"> <%= "price #{product.price} "%><p>
      <div class="flexquantity">
        <%= form_for order_item, remote: true do |f| %>
        <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
      </div>
      <div class="flexcart">
      <%= f.hidden_field :product_id, value: product.id %>
      <%= f.submit "Add to Cart", class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
    <% end %>
    <% end %>
  </li>
</ul>
