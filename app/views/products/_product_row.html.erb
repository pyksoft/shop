<table class="table table-bordered table-striped">
  <thead>
      <tr>
          <th class="text-left"><%= sort_link "name" %></th>
          <th class="text-left"><%= "price" %></th>
          <th class="text-left">
              <strong>photo:</strong>
          </th>
          <th class="text-left">
              <strong>Quantity:</strong>
          </th>
          <th class="text-left">
              <strong>Add to cart:</strong>
          </th>
          <!-- <th class="text-left">
              <strong>Add to wishlist:</strong>
          </th> -->


        </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
          <td><%= link_to product.name, product_path(product.id) %>
          </td>
          <td>
              <%= product.price %>
          </td>
          <% product.photos.each do |photo| %>
          <td><%= image_tag photo.image %>
          </td>
            <%= form_for order_item, remote: true do |f| %>
          <td><%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %></td>
            <%= f.hidden_field :product_id, value: product.id %>
          <td><%= f.submit "Add to Cart", class: "btn btn-primary" %></td>

          <!-- <td><%- unless current_user.favorite_products.exists?(product.id) -%>
            <%= link_to 'Add to wishlist', favorite_products_path(@product_id), method: :post %>
            <%- else -%>
            <%= link_to 'Remove from wishlist', favorite_product_path(product.id), method: :delete %>
            <%- end -%>
          </td> -->

  </td>
      </tr>
        <% end %>
        <% end %>
        <% end %>
    </tbody>
</table>
